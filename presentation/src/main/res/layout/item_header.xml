<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="202dp"
    android:background="@color/header_background"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_chip"
        style="@style/Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_best_chip"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/best" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Heading.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tint_opposite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chip"
        tools:text="한 번 주문하면\n두 번 반하는 반찬들" />


</androidx.constraintlayout.widget.ConstraintLayout>